{
  "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "sourceRoot": "packages/psychrometrics/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/psychrometrics",
        "main": "packages/psychrometrics/src/index.ts",
        "tsConfig": "packages/psychrometrics/tsconfig.lib.json",
        "assets": ["packages/psychrometrics/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs psychrometrics {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/psychrometrics/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/psychrometrics"],
      "options": {
        "jestConfig": "packages/psychrometrics/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "copy-license-readme": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "shx cp ./README.md ./packages/psychrometrics/src/README.md && shx cp ./LICENSE ./packages/psychrometrics/src/LICENSE && shx cp -R ./doc ./packages/psychrometrics/src"
      }
    },

    "package": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "projects": "self",
          "target": "copy-license-readme"
        }
      ],
      "options": {
        "project": "packages/psychrometrics/package.json",
        "outputPath": "dist/packages/psychrometrics",
        "entryFile": "packages/psychrometrics/src/index.ts",
        "tsConfig": "packages/psychrometrics/tsconfig.lib.json",
        "compiler": "babel",
        "umdName": "OtherName",
        "external": ["typescript", "core-js", "@adaskothebeast/splines"],
        "format": ["cjs", "esm"],
        "assets": [
          {
            "glob": "*.md",
            "input": "packages/psychrometrics/src/doc",
            "output": "./doc"
          },
          {
            "glob": "README.md",
            "input": "packages/psychrometrics/src",
            "output": "./"
          }
        ],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "bundle": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "target": "package",
          "projects": "self"
        }
      ],
      "options": {
        "libraryName": "psychrometrics",
        "libraryTargets": ["global", "commonjs", "amd", "umd"],
        "index": "",
        "tsConfig": "packages/psychrometrics/tsconfig.lib.json",
        "main": "packages/psychrometrics/src/index.ts",
        "outputPath": "dist/packages/psychrometrics/bundles",
        "compiler": "babel",
        "optimization": true,
        "extractLicenses": true,
        "runtimeChunk": false,
        "vendorChunk": false,
        "generateIndexHtml": false,
        "commonChunk": false,
        "namedChunks": false,
        "webpackConfig": "webpack.config.js"
      }
    },
    "move-to-folder": {
      "executor": "nx:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "bundle",
          "projects": "self"
        }
      ],
      "options": {
        "command": "cd dist/packages/psychrometrics"
      }
    },
    "publish2": {
      "executor": "nx:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "move-to-folder",
          "projects": "self"
        }
      ],
      "options": {
        "command": "npm publish --tag=latest --access public"
      }
    }
  },
  "tags": []
}
